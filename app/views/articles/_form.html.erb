<%=form_for @article do |f|%>
  <%=f.label :title%><br>
  <%=f.text_field :title%><br>

  <%=f.label :short_description%><br>
  <%=f.text_area :short_description%><br>

  <%=f.label :description%><br>
  <%=f.text_area :description%><br>

  <%=f.label :category%><br>
  <%=f.text_field :category%><br>

  <%=f.submit 'Submit'%>

<%end%>
